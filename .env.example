# EcoPredict Environment Configuration
# Copy this file to .env and fill in with actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=false
API_TIMEOUT=30

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=localhost,http://localhost:3000
API_KEY_ENABLED=false
API_KEY_SECRET=your-secret-key-here

# Database
DATABASE_URL=sqlite:///./data/ecopredict.db
# For PostgreSQL: postgresql://user:password@localhost/ecopredict

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ecopredict.log

# Model Configuration
MODEL_PATH=models/trained
CACHE_PREDICTIONS=true
CACHE_TTL=3600

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_THEME=light

# Data Paths
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
OUTPUT_PATH=outputs

# Feature Flags
ENABLE_MONITORING=true
ENABLE_CACHE=true
ENABLE_BATCH_PROCESSING=true
MAX_BATCH_SIZE=1000

# GIS Configuration
GIS_TILE_SERVER=https://tile.openstreetmap.org
GIS_ZOOM_LEVEL=8

# Notification (Optional)
NOTIFICATION_EMAIL=admin@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Cloud Storage (Optional)
S3_ENABLED=false
S3_BUCKET=ecopredict-data
S3_REGION=us-east-1

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Timezone
TZ=Asia/Kolkata
